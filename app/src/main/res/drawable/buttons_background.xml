<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="false">
        <shape android:shape="rectangle">
            <gradient
                android:startColor = "#CD00FF"
                android:endColor="#9000FF"
                android:centerColor="#AC01FF"
                android:angle="135"/>
            <corners android:radius="10dp"/>


        </shape>
    </item>
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <gradient
                android:endColor="#7116B6"
                android:centerColor="#851AB8"
                android:startColor = "#9B06BF"
                android:angle="135"/>
            <corners android:radius="10dp"/>


        </shape>
    </item>

</selector>